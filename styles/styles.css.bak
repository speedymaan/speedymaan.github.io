body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  font-family: var(--secondary-font);
  /*overflow-y: scroll; /* Always show a vertical scrollbar */
}

.container {
  max-width: 90%; /* Adjust the percentage as per your preference */
  margin: 0 auto; /* Center the container horizontally */
}

header {
  background-color: #161b33;
  color: #fff;
  height: 70px; /* Adjust the height to your desired value */
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: top 0.3s;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.sticky {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
}

header h1 {
  letter-spacing: 2px; /* Adjust the value as per your preference */
}

h1,
h2,
h3 {
  font-family: "Roboto", sans-serif;
  font-size: 40px;
}

p,
a {
  font-family: "Noto Serif";
  font-size: 18px;
}

/* Base styles for larger screens */
img {
  max-width: 30%;
  height: auto;
}

/* Media query for smaller screens (e.g., mobile devices) */
@media (max-width: 768px) {
  img {
    max-width: 80%; /* Adjust this percentage as needed for smaller screens */
  }
}

.header-buttons {
  display: flex;
  align-items: center;
}

button {
  margin-right: 10px;
  background-color: #333;
  color: #fff;
  border: none;
  padding: 10px 20px;
  cursor: pointer;
}

/* Add focus styles */
button:focus {
  outline: 2px solid #007bff; /* Example with a blue outline */
}

/* Similar focus styles for link-like elements */
nav a:focus {
  outline: 2px dotted #333; /* Example with dotted outline */
}

nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

nav ul li {
  display: inline;
  margin-right: 20px;
}

nav a {
  text-decoration: none;
  color: #fff;
  font-weight: bold;
}
